<!DOCTYPE html>
<html>
  <head>
    <style>
      body {
        width: 70%;
        margin-left: 10%;
      }
      input[type=text] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        box-sizing: border-box;
      }
      textarea {
        width: 100%;
        height: 150px;
        padding: 12px 20px;
        box-sizing: border-box;
        border: 2px solid #ccc;
        border-radius: 4px;
    }
    button {
      width: 30%;
      height: 50px;
      padding: 12px 20px;
      border-radius: 4px;
    }
    </style>
    <meta charset="utf-8">
    <title>Edit</title>
  </head>
  <body>
    <h3>Edit Todo</h3>
    <div class="new-form">
      <form action="/posts/<%=post.id%>" method="post">
        <label for="title"></label>
        <label for="post[author]">Your Name</label>
        <input type="text" name="post[author]" value="<%=post.author%>">
        <input type="text" name="post[title]" value="<%=post.title%>" required>
        <label for="description"></label>
        <textarea name="post[description]" rows="8" cols="10"
         required><%= post.description %></textarea>
        <button type="submit">Update Post</button>
      </form>
    </div>
  </body>
</html>
